@model VotingSystem.WebUI.Models.Poll.PollViewModel
@{ 
	ViewBag.Title = "Add Voting";
	Layout = "~/Views/Shared/_Layout.cshtml";
}


<h2>Add Voting</h2>

<div class="form-horizontal">
	
	<div class="form-group">
		<label class="col-lg-2 col-lg-push-1">Name</label>
		<div class="col-lg-5">
			<input class="form-control" data-bind="value: name" />
		</div>
		<div class="date" id="dp3" data-date="@DateTime.Now.Date.ToString("dd-MM-yyyy")" data-date-format="dd-mm-yyyy">
			<div class="col-lg-2 input-group">
				<input class="form-control" size="16" type="text" value="@DateTime.Now.Date.ToString("dd-MM-yyyy")" readonly>
				<span class="input-group-addon">
					<i class="glyphicon glyphicon-calendar"></i>
				</span>
			</div>	
		</div>	 
	</div>
	

	<div class="form-group">
		<label class="col-lg-2 col-lg-push-1">Question</label>
		<div class="col-lg-7">
			<input class="form-control" data-bind="value: question" />
		</div>
	</div>
	
	
	<div class="form-group">
		
		<label class="col-lg-2 col-lg-push-1">
			Open Result 
			<input type="checkbox" data-bind="checked: isOpenResult" />	
		</label>	

		<label class="col-lg-2 col-lg-push-1">
			Private 
			<input type="checkbox" data-bind="checked: isPrivate" />	
		</label>	
		
		<div class="col-lg-5">
			<input class="form-control" data-bind="visible: isPrivate" placeholder="Key Word"/>
		</div>
			
	</div>


	<div class="form-group">
		<label class="col-lg-2 col-lg-push-1">Answer</label>
		<div class="col-lg-7">
			<div class="input-group">
				<input class="form-control" data-bind="value: newAnswerText" placeholder="What are you answer text?" />
				<span class="input-group-btn">
					<button class="btn btn-default" type="button" data-bind="click: addAnswer">Add</button>
				</span>
			</div>
		</div>
	</div>
	


	<div data-bind="foreach: answers, visible: answers().length > 0">
		<div class="form-group">
			<div class="col-lg-push-2 col-lg-7">
				<div class="input-group">
					<input class="form-control" data-bind="value: text"/>
					<span class="input-group-btn">
						<button class="btn btn-default" type="button" data-bind="click: $root.removeAnswer">Del</button>
					</span>
				</div>
			</div>
		</div>
	</div>


	<div class="form-group">
		<div class="col-lg-2 col-lg-push-2">
			<button class="btn btn-default" data-bind="click: save">Save</button>
		</div>
	</div>
	
</div>





<script src="@Url.Content("~/Scripts/VotingSystem/AddVoting.js")" type="text/javascript"></script>
