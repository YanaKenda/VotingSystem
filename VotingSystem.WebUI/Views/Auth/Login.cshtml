@using System.Web.Mvc.Html
@model VotingSystem.WebUI.Models.Auth.LoginViewModel

@{ ViewBag.Title = "Login"; Layout = "~/Views/Shared/_Layout.cshtml"; }

<h2>Log In</h2>

@Html.ValidationSummary()


<fieldset>
	@using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "bs-example form-horizontal" }))
 {
		<div class="form-group">
			@Html.LabelFor(m => m.Email, new { @class = "col-lg-1 control-label col-md-offset-3" })
			<div class="col-lg-4">
				@Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = "Email" })
			</div>
			<div class="col-lg-4">
				@Html.ValidationMessageFor(m => m.Email)
			</div>
		</div>

		<div class="form-group">
			@Html.LabelFor(m => m.Password, new { @class = "col-lg-1 control-label col-md-offset-3" })
			<div class="col-lg-4">
				@Html.TextBoxFor(m => m.Password, new { @class = "form-control", placeholder = "Password", type = "password" })
			</div>
			<div class="col-lg-4">
				@Html.ValidationMessageFor(m => m.Password)
			</div>
		</div>

		<label class="col-lg-5 control-label col-md-offset-1">
			@Html.CheckBoxFor(m => m.RememberMe)
			Remember me
		</label>

		<br />
		<br />

		<button type="submit" class="btn btn-primary col-lg-4 col-md-offset-4 col-md-1">Submit</button> 
 }

</fieldset>
