@model VotingSystem.Entities.Poll
<p class="text-success">@TempData["Message"]</p>
<div>Summary voted: @Model.Count</div>
@foreach (var item in Model.Answers)
{
	<div class="">
		<div class="col-md-2 text-info">@item.AnswerText Choosen: @item.Count</div>
    
		<div class="col-md-10 progress progress-striped active">
			<div class="progress-bar" style="width: @(item.Count*100/Model.Count)%"></div>
		</div>
	</div>
	<div class="clearfix"></div>
}

@if(ViewBag.IsAlreadyVote == null || !ViewBag.IsAlreadyVote)
{
    @Ajax.ActionLink("Voting", "PollViewState", "Poll", new {PollId = Model.Id}, new AjaxOptions() {UpdateTargetId = "target"}, new { @class = "label label-danger"})
}
