@using System.Globalization
<!DOCTYPE html>

<html>
<head>
	<title>@ViewBag.Title</title>

	<link href="@Url.Content("~/Content/bootstrap/bootstrap.min.css")" rel="stylesheet" type="text/css" media="screen" />
	<link href="@Url.Content("~/Content/bootstrap/bootswatch.min.css")" rel="stylesheet" type="text/css" media="screen" />
	<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" media="screen" />
	<link href="@Url.Content("~/Content/bootstrap-datepicker.css")" rel="stylesheet" type="text/css" media="screen"/>

	<link rel="shortcut icon" href="@Url.Content("~/Content/Images/VotingIcon.png")">

	@Html.Partial("_ScriptsPart")
</head>
<body>

	<div class="navbar navbar-default navbar-fixed-top">
		<div class="container">
			<div class="navbar-header">
				<button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-responsive-collapse">
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
					<span class="icon-bar"></span>
				</button>
				@Html.ActionLink("Voting System", "Index", "Home", null, new { @class = "navbar-brand" })
			</div>
			<div class="navbar-collapse collapse navbar-responsive-collapse">
				@if (User.Identity.IsAuthenticated)
	{
					<ul class="nav navbar-nav">
						<li class="dropdown">
							<a class="dropdown-toggle" data-toggle="dropdown">My Activity<b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li><a href="@Url.Action("AddVoting", "UserActivity")"><i class="glyphicon glyphicon-plus"></i>Add New Voting</a></li>
								<li class="divider"></li>
								<li class="dropdown-header">History</li>
								<li>@Html.ActionLink("My Votings", "UserVotings", "UserActivity")</li>
								<li>@Html.ActionLink("My Voices", "UserVoices", "UserActivity")</li>
							</ul>
						</li>
					</ul>
	}


				<ul class="nav navbar-nav navbar-right">

					<li class="dropdown">
						@if (User.Identity.IsAuthenticated)
	  {
							<a class="dropdown-toggle" data-toggle="dropdown"><i class="glyphicon glyphicon-user"></i>@User.Identity.Name <b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li>@Html.ActionLink("My Profile", "MyProfile", "User")</li>
								@if (User.IsInRole("Admin"))
		{
									<li>@Html.ActionLink("Administration", "Index", "User")</li>
		}

								<li class="divider"></li>
								<li>
									@Html.ActionLink("Log Out", "LogOff", "Auth")
								</li>
							</ul>
	  }
	  else
	  {
							<a href="#" class="dropdown-toggle" data-toggle="dropdown">Guest<b class="caret"></b></a>
							<ul class="dropdown-menu">
								<li>
									@Html.ActionLink("Log In", "Login", "Auth")
								</li>
								<li class="divider"></li>
								<li>@Html.ActionLink("Register", "Register", "Auth")</li>
							</ul> 
	  }

					</li>
				</ul>
			</div>
			<!-- /.nav-collapse -->
		</div>
		<!-- /.container -->
	</div>
	<!-- /.navbar -->


	<div class="container">


		<!--Content-->
		<div class="well info-container">
			@RenderBody()
		</div>

		<!--Footer-->
		<div class="well text-info info-container footer text-center">
			Kenda Yana © @DateTime.Now.Year.ToString(CultureInfo.InvariantCulture)
		</div>
	</div>



</body>

</html>
