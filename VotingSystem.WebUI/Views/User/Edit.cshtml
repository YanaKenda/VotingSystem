@model VotingSystem.WebUI.Models.User.EditModel

@{
	ViewBag.Title = "Edit User";
	Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="panel panel-info ">
	<div class="panel-heading">User Info</div>
	<div class="panel-body">
		@using (Html.BeginForm("Edit", "User", FormMethod.Post, new { @class = "bs-example form-horizontal" }))
  {
			<div class="form-group">
				@Html.LabelFor(m => m.Name, new { @class = "col-lg-1 control-label col-md-offset-3" })
				<div class="col-lg-4">
					@Html.TextBoxFor(m => m.Name, new { @class = "form-control" })

				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(m => m.Surname, new { @class = "col-lg-1 control-label col-md-offset-3" })
				<div class="col-lg-4">
					@Html.TextBoxFor(m => m.Surname, new { @class = "form-control" })
				</div>
			</div>

			<div class="form-group">
				@Html.LabelFor(m => m.Email, new { @class = "col-lg-1 control-label col-md-offset-3" })
				<div class="col-lg-4">
					@*@Html.TextBoxFor(m => m.Email, new { @class = "form-control", id = "disabledInput", type = "text", disabled = "" })*@
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
				</div>
			</div>

			<br />
			<br />

			<button type="submit" class="btn btn-primary col-lg-4 col-md-offset-4 col-md-1">Submit</button> 
  }
	</div>
</div>
